{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "rootDir": "src",
    "jsx": "react",
    "lib": ["es2015"],
    "module": "es2015",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "*": ["*", "*.native"]
    },
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
