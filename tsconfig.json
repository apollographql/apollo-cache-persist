{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react",
    "lib": ["es2015"],
    "module": "es2015",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "*": ["*", "*.native"]
    },
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "**/__tests__/*",
    "**/__mocks__/*"
  ]
}
